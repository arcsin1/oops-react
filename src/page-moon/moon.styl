.page-moon {
  height: 100vh;
  width: 100%;
  background-color: #20263b;
}
@keyframes shine {
  0% {
   
    transform: scale(1);
  }
  100% {
     transform: scale(0.6);
  }
}


@keyframes glow {
  0% {
    box-shadow: 0 0 1em #ffffff, 0 0 -1em #ffffff;
    opacity: 1;
    transform: scale(0);
  }
  100% {
    box-shadow: 0 0 1em #ffffff;
    opacity: 0;
    transform: scale(2.5);
  }
}

@keyframes blink {
  0%, 95% {
    transform: scaleY(1);
  }
  98%, 100% {
   transform: scaleY(0.1);
  }
}



@keyframes lookaround {
  0%, 15% {
   transform: rotate(-10deg);
  }
  20%, 50%, 80% {
    transform: rotate(0);
  }
  85%, 100% {
     transform: rotate(10deg);
  }
}

@keyframes heartbeat {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  2% {
    opacity: 0.5;
     transform: scale(1.3);
  }
  4% {
    opacity: 1;
    transform: scale(1);
  }
  8% {
    transform: scale(1.1);
  }
  10% {
     transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(1) translate(0, -800%);
  }
}

